{
    "name" : "LibraryTarget" ,
    "target_type" : "library",
    "parameters" : [
        "STATIC"
    ],
    "sources" : [
        "src/simplelib.cpp"
    ],

    "target_sources" : {
        "private" : [
            "src/simple_private.hpp"
        ]
    },

    "include_directories" : {
        "private" : [ 
            "$<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}/src>"
        ],
        "public" : [ 
            "$<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}/include>",
            "$<INSTALL_INTERFACE:include>" ]
    },

    "compile_features" : {
        "private" : [
            "cxx_std_17"
        ]
    },

    "compile_definitions" : {
        "public" : [
            "PUBLIC_JUST_TESTING"
        ],
        "interface" : [
            "INTERACE_JUST_TESTING"
        ],
        "private" : [
            "PRIVATE_JUST_TESTING"
        ]
    }
}