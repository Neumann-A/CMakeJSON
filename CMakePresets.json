{
    "version": 1,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 19,
      "patch": 0
    },
    "configurePresets": [
        {
          "name": "default",
          "displayName": "Default Config",
          "description": "Default build using Ninja generator",
          "generator": "Ninja",
          "binaryDir": "${sourceDir}/build/${presetName}",
          "cacheVariables": {
            "CMakeJSON_DEBUG": {
              "type": "BOOL",
              "value": "ON"
            },
            "BUILD_TESTING": {
              "type": "BOOL",
              "value": "ON"
            },
            "BUILD_EXAMPLES": {
              "type": "BOOL",
              "value": "ON"
            }
          }
        }
      ]
    }